// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build language server",
      "type": "npm",
      "script": "webpack-dev:language-server",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build extension",
      "type": "npm",
      "script": "webpack-dev:extension",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build dotnet server",
      "command": "dotnet",
      "type": "process",
      "args": [
          "build",
          "${workspaceFolder}/src/stripeDotnetLanguageServer/stripe.LanguageServer/stripe.LanguageServer.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
  },
    {
      "label": "Build all",
      "dependsOn": ["Build language server", "build dotnet server", "Build extension"]
    }
  ]
}
