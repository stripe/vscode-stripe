{
  "name": "vscode-stripe",
  "displayName": "Stripe",
  "description": "Stripe for Visual Studio Code",
  "version": "0.1.0",
  "publisher": "stripe",
  "repository": "https://github.com/stripe/vscode-stripe",
  "engines": {
    "vscode": "^1.34.0"
  },
  "icon": "resources/logo_128.png",
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onDebugInitialConfigurations",
    "onDebug",
    "onView:stripeView",
    "onCommand:stripe.openCLI",
    "onCommand:stripe.openWebhooksListen",
    "onCommand:stripe.openLogsStreaming",
    "onCommand:stripe.openDashboardApikeys",
    "onCommand:stripe.openDashboardLogs",
    "onCommand:stripe.openDashboardEvents",
    "onCommand:stripe.openDashboardWebhooks",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:python",
    "onLanguage:ruby",
    "onLanguage:java",
    "onLanguage:php"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "Stripe",
        "command": "stripe.openWebhooksListen",
        "title": "Start Webhooks events listening with CLI"
      },
      {
        "category": "Stripe",
        "command": "stripe.openLogsStreaming",
        "title": "Start API logs streaming with CLI"
      },
      {
        "category": "Stripe",
        "command": "stripe.openCLI",
        "title": "Start CLI"
      },
      {
        "category": "Stripe",
        "command": "stripe.login",
        "title": "Login with CLI"
      },
      {
        "category": "Stripe",
        "command": "stripe.openDashboardApikeys",
        "title": "Open Dashboard to manage API Keys"
      },
      {
        "category": "Stripe",
        "command": "stripe.openDashboardLogs",
        "title": "Open Dashboard to see recent logs"
      },
      {
        "category": "Stripe",
        "command": "stripe.openDashboardEvents",
        "title": "Open Dashboard to see recent Events"
      },
      {
        "category": "Stripe",
        "command": "stripe.openDashboardWebhooks",
        "title": "Open Dashboard to manage Webhooks"
      },
      {
        "category": "Stripe",
        "command": "stripe.openDashboardEventDetails",
        "title": "Open Dashboard with a specific event"
      },
      {
        "category": "Stripe",
        "command": "stripe.refreshEventsList",
        "title": "Refresh events list",
        "icon": {
          "dark": "resources/icons/dark/refresh.svg",
          "light": "resources/icons/light/refresh.svg"
        }
      }
    ],
    "views": {
      "stripe": [
        {
          "id": "stripeView",
          "name": "Dashboard"
        },
        {
          "id": "stripeEventsView",
          "name": "Events"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "stripe.refreshEventsList",
          "when": "view == stripeEventsView",
          "group": "navigation"
        }
      ]
    },
    "debuggers": [
      {
        "type": "stripe",
        "label": "Stripe",
        "configurationSnippets": [
          {
            "label": "Stripe: Listen",
            "description": "Debug stripe webhooks",
            "body": {
              "type": "stripe",
              "request": "launch",
              "localUrl": "http://localhost:3000/stripe-events",
              "command": "listen"
            }
          }
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "localUrl": {
                "type": "string",
                "description": "Url for local http server",
                "default": "http://localhost:3000/stripe-events"
              },
              "command": {
                "type": "string",
                "description": "Command to execute",
                "default": "listen"
              }
            }
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "resources/icons/icon_activitybar.svg",
          "id": "stripe",
          "title": "Stripe"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^10.14.17",
    "@types/vscode": "^1.34.0",
    "tslint": "^5.16.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "execa": "^4.0.0",
    "which": "^2.0.2"
  }
}
